  </div>  <script>
    // State for the form
    const serverNameEl = document.getElementById('serverName');
    const languageEl = document.getElementById('language');
    const plansEl = document.getElementById('plans');
    const nextBtn = document.getElementById('nextBtn');

    // Show plans after validating form
    nextBtn.addEventListener('click', () => {
      const name = serverNameEl.value.trim();
      const lang = languageEl.value;
      if (!name) {
        alert('Please enter a server name');
        return;
      }
      // reveal plans
      plansEl.classList.remove('hidden');
      // Scroll to plans
      plansEl.scrollIntoView({ behavior: 'smooth' });
      // (Re)render PayPal buttons with current metadata
      renderPayPalButtons(name, lang);
    });

    // Render PayPal buttons for each plan amount
    function renderPayPalButtons(serverName, language) {
      const meta = `${serverName} | ${language}`; // used in custom_id so you can see what was purchased

      // Helper to mount a button to a container with fixed amount
      const mountButton = (containerId, amountUsd) => {
        const container = document.getElementById(containerId);
        container.innerHTML = ''; // reset if re-rendering

        if (!window.paypal) {
          container.innerHTML = '<div class="text-red-400 text-sm">PayPal SDK failed to load. Check your client-id.</div>';
          return;
        }

        paypal.Buttons({
          style: { layout: 'vertical', color: 'blue', shape: 'rect', label: 'paypal' },
          createOrder: function(data, actions) {
            return actions.order.create({
              purchase_units: [{
                description: `Hosting Plan $${amountUsd}/mo`,
                custom_id: meta,
                amount: { currency_code: 'USD', value: amountUsd.toFixed(2) }
              }],
              application_context: { shipping_preference: 'NO_SHIPPING' }
            });
          },
          onApprove: function(data, actions) {
            return actions.order.capture().then(function(details) {
              alert(`Payment successful! Thanks ${details.payer.name.given_name}.\nOrder: ${details.id}`);
              // TODO: send details to your backend to provision access
              window.location.href = '/success.html';
            });
          },
          onError: function(err) {
            console.error(err);
            alert('Payment failed. Please try again.');
          }
        }).render('#' + containerId);
      };

      mountButton('paypal-btn-1', 1);
      mountButton('paypal-btn-3', 3);
      mountButton('paypal-btn-5', 5);
    }
  </script></body>
